FROM node:18-alpine

WORKDIR /app

# Kopiere package.json und package-lock.json
COPY package*.json ./

# Installiere Dependencies
RUN npm install

# Kopiere den Rest der Anwendung
COPY . .

# Exponiere Port f√ºr Development Server
EXPOSE 3000

# Starte Development Server mit Hot Reload
CMD ["npm", "start"]
